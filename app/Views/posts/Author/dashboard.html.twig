        <div class="col-12 shadow-lg p-2 mb-3 ">
            <h2 >Vos Publications</h2>
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-sm">
                <thead>
                <tr class="text-white bg-info">
                    <th>Titre</th>
                    <th>Date</th>
                    <th>Modifier</th>
                </tr>
                </thead>
                <tbody>
                {% for book in chapitresall %}

                    <tr>
                        <td>{{ book.title }}</td>
                        <td>{{ book.date}}</td>
                        <td><a href="http://localhost/literaryBlog/public/index.php?p=posts_admin&id={{book.id |nl2br }}">
                                <input class="btn btn-info" type="submit" value="Modifier" />
                            </a></td>
                    </tr>

                {% endfor %}

                </tbody>
            </table>
        </div>
    </div>



{% endblock %}




