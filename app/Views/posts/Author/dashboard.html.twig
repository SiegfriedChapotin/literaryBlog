{% extends  "layout/Author/layoutdashboard.html.twig" %}



{% block textarea %}

    <br/>
    <div class="col-12 shadow-lg p-4 mb-5  ">
        <h1>Bureau</h1>
    </div>

    <div class="row">
        <div class="col-lg-6 col-md-12  ">
            <div class="row padding">
                <div class="col-12 shadow-lg p-2 mb-3 ">
                    <h3>Vos courriers</h3>
                </div>
                <div class="table-responsive">
                    <table class="table table-striped table-sm">
                        <thead>
                        <tr class="text-white bg-success">
                            <th class="width20" >Nom</th>
                            <th>Courriel</th>
                            <th class="width10">Lire</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for mail in mail %}
                            <tr>
                                <td>{{ mail.name }}</td>
                                <td>{{ mail.title|truncate(50)}}</td>
                                <td>
                                    <a href="http://localhost/literaryBlog/public/index.php?p=mail_Office">
                                        <input class="btn btn-info" type="submit" value="Lire"/>
                                    </a></td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
        <div class="col-lg-6 col-md-12">
            <div class="row padding">
                <div class="col-12 shadow-lg p-2 mb-3 ">
                    <h3>Vos Publications en cours de rédaction</h3>
                </div>

                <div class="table-responsive">
                    <table class="table table-striped table-sm">
                        <thead>
                        <tr class="text-white bg-info">
                            <th >Titre</th>
                            <th class="width20">Date</th>
                            <th class="width10">Modifier</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for book in chapitres %}

                            <tr>
                                <td>{{ book.title }}</td>
                                <td>{{ book.date|date_modify ( "+1 day" )| date ( "m/d/Y"  )}}</td>
                                <td>
                                    <a href="http://localhost/literaryBlog/public/index.php?p=posts_admin&id={{ book.id |nl2br }}">
                                        <input class="btn btn-info" type="submit" value="Modifier"/>
                                    </a></td>
                            </tr>

                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <br/>

    </div>

    <div class="row">
        <div class="col-lg-6 col-md-12 ">
            <div class="row padding">
                <div class="col-12 shadow-lg p-2 mb-3 ">
                    <h3>Les derniers commentaires</h3>
                </div>

                <div class="table-responsive">
                    <table class="table table-striped table-sm">
                        <thead>
                        <tr class="text-white bg-warning ">
                            <th>Pseudo</th>
                            <th>Commentaires</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for comment in comment %}

                            <tr>
                                <td>{{ comment.pseudo }}</td>
                                <td>{{ comment.comment }}</td>

                            </tr>

                        {% endfor %}

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-lg-6 col-md-12">
            <div class="row padding">
                <div class="col-12 shadow-lg p-2 mb-3 ">
                    <h3>Commentaires signalés</h3>
                </div>

                <div class="table-responsive">
                    <table class="table table-striped table-sm">
                        <thead>
                        <tr class="text-white bg-danger">
                            <th>Pseudo</th>
                            <th>Commentaires</th>
                            <th class="width10">Garder</th>
                            <th class="width10">Supprimer</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for commentreport in commentreport %}
                        <form method="post">
                            <tr>
                                <td>{{ commentreport.pseudo }}</td>
                                <td>{{ commentreport.comment }}</td>
                                <td>
                                    <button type="submit"
                                            class="btn btn-card btn-bg btn-success font-weight-bold "
                                            name="commentreport"
                                            value="{{ commentreport.id }}">

                                        <a class=" paddingRL">Garder</a>
                                        <i data-feather="check"></i>
                                    </button>
                                </td>
                                <td>
                                    <button type="submit"
                                            class="btn btn-card btn-danger font-weight-bold  btn-bg"
                                            name="commentdel"
                                            value="{{ commentreport.id }}">
                                        <a class=" paddingRL"> Supprimer</a>
                                        <i data-feather="delete"></i>
                                    </button>
                                </td>
                            </tr>
                            </form>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>

{% endblock %}




