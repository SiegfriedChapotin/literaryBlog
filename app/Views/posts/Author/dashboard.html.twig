{% extends  "layout/Author/layoutdashboard.html.twig" %}



{% block textarea %}

<br/>
<div class="col-12 shadow-lg p-4 mb-5  ">
    <h1>Bureau</h1>
</div>

<div class="row">
    <div class="col-6 ">
        <div class="row padding">
            <div class="col-12 shadow-lg p-2 mb-3 ">
                <h3 >Les derniers commentaires</h3>
            </div>

            <div class="table-responsive">
                <table class="table table-striped table-sm">
                    <thead>
                    <tr class="text-white bg-warning ">
                        <th>Pseudo</th>
                        <th>Commentaires</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for comment in comment %}

                        <tr>
                            <td>{{ comment.pseudo }}</td>
                            <td>{{ comment.comment}}</td>

                        </tr>

                    {% endfor %}

                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="col-6">
        <div class="row padding">
            <div class="col-12 shadow-lg p-2 mb-3 ">
                <h3 >Commentaires signalés</h3>
            </div>

            <div class="table-responsive">
                <table class="table table-striped table-sm">
                    <thead>
                    <tr class="text-white bg-danger">
                        <th>Pseudo</th>
                        <th>Commentaires</th>
                        <th>Garder</th>
                        <th>Supprimer</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for comment in commentreport %}

                        <tr>
                            <td>{{ comment.pseudo }}</td>
                            <td>{{ comment.comment}}</td>
                            <td><a href="http://localhost/literaryBlog/public/index.php?p=posts_admin&id={{book.id }}">
                                    <input class="btn btn-success" type="submit" value="Garder" />
                                </a></td>
                            <td><a href="http://localhost/literaryBlog/public/index.php?p=posts_admin&id={{book.id }}">
                                    <input class="btn btn-danger" type="submit" value="supprimer" />
                                </a></td>
                        </tr>

                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <br/>

    </div>
    <div class="row">
