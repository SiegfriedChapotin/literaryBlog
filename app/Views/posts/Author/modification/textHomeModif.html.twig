{% extends  "layout/Author/layoutdashboard.html.twig" %}



{% block textarea %}

    <br/>
    <div class="col-12 shadow-lg p-4 mb-5  ">
        <h1>Page d'accueil</h1>
    </div>

    {% for texthome in texthome %}
        <form method= "post">
            <div class= "form-group" >

                <label for= "TitleDashboard" >Titre</label>
                <textarea class="form-control" type="text" name="TitleDashboard">{{ texthome.title }}</textarea>

                <label for= "TextDashboard" > Texte </label>
                <textarea class= "form-control textarea" id= "textarea" rows= "20" name="TextDashboard">{{texthome.text |nl2br }}</textarea>
            </div>
            <div>
                <input class="btn btn-info" type="submit" value="Modifier" />
            </div>
        </form>
        <wbr/>
    {% endfor %}

{% endblock %}